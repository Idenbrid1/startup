<%= render partial: "/layouts/navbar_coperatesite" %>
<style type="text/css">
  ul li {
    font-size: 110%;
    line-height: 1.45;
    letter-spacing: 1.2px;
    font-weight: 500;
    margin-bottom: 1rem;
    z-index: 5;
            }
    .sns-buttons li{
      margin-bottom: 0 !important;
     }

  #paginate{
  justify-content:center; 
  color:grey;
   }          
</style>
<p id="notice"><%= notice %></p>


<section id="services" class="section-bg">
  <div class="col-md-9 mx-auto opcity2">
   <header class="section-header text-center">
    <h3 class="text-capitalize pt-5">NEWS</h3>
        <div class="lead-sub" style="color: #9e9e9e">ニュース</div>
   </header>
  <div class="col-md-9 mx-auto mt-5">
    <div class="row">
      <div class="col-lg-3 offset-lg-1 wow bounceInUp mb-3" data-wow-duration="1.4s">
        <label>Year</label>
        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            All
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
             <p class="title1"><%= %></p>
            <a class="dropdown-item" href="#" style="color:black;">All</a>
            <a class="dropdown-item" href="#">2020</a>
            <a class="dropdown-item" href="#">2019</a>
          </div>
        </div>
      </div>
      <div class="col-lg-3 offset-lg-1 wow bounceInUp mb-3" data-wow-duration="1.4s">
        <label>Category</label>
      <div class="dropdown">
       <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          All
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          
          <%= link_to "Press release", pressses_path, class:'dropdown-item',style:"color:black;" %>
          <%= link_to "Notice", notices_path, class:'dropdown-item',style:"color:black;" %>
          <%= link_to "Publication", publications_path, class:'dropdown-item',style:"color:black;" %>
        </div>
      </div>
    </div>
   </div>
  </div></br>
  <div class="row" id="newletterbox">
    <% @newzs.each do |newz| %>
    
    <div class="col-lg-8 col-md-6 offset-lg-1">
      
      <div class="box" >
        <div class="title">
          <h5> Media </h5>
        </div>  
        
          <h4 class="title"><%= newz.name %></h4>
          <h4 class="title"><%= newz.title %></h4>
          <p class="title1"><%= newz.publish_date %></p>
          <p class="description"><%= newz.body.first(80) %></p>
          <div>

           
            <%= link_to 'Show', newz, class:"btn btn-info" %>
            <% if current_user.admin %>
             <%= link_to 'Edit', edit_newz_path(newz), class:"btn btn-success" %>
             
             <%= link_to 'Destroy', newz,class:"btn btn-warning", method: :delete, data: { confirm: 'Are you sure?'} %>
             
             
            <% end %>
          </div>
        
      </div>
    </div>
    <% end %>
  </div>
  <%= will_paginate @newzs,id:'paginate' %>

 
 <%= link_to 'Create News', new_newz_path, class:'btn btn-primary' %>
</section><!-- #services -->
<% if current_user.admin %>
  <%= render partial: "/layouts/footer" %>
<%end%>  