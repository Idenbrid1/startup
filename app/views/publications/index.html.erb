   <div class="row" id="newletterbox">
     <% @publications.each do |publication| %>
    
    <div class="col-md-3 col-lg-3 offset-lg-1 wow bounceInUp" data-wow-duration=" 1.4s">
      
      <div class="box" >
        <div class="title">
