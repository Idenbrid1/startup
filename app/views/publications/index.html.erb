          <div>Title:</div>
          <div>Publish date:</div>
          <div>Body:</div>
        </div>
        
          <h4 class="title"><%= publication.title %></h4>
          <p class="title1"><%= publication.publication_date %></p>
          <p class="description"><%= publication.body %></p>
          <div>
            <%= link_to 'Show', publication, class:"btn btn-info" %>
            <%= link_to 'Edit', edit_publication_path(publication), class:"btn btn-success" %>
            <%= link_to 'Destroy', publication,class:"btn btn-warning", method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        
      </div>
    </div>
    <% end %>
  </div>
  <%= will_paginate @publications,id:'paginate' %>
