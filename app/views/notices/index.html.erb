          <p class="title1"><%= notice.notice_date %></p>
          <p class="description"><%= notice.body.first(80) %></p>
          <div>
            <%= link_to 'Show', notice, class:"btn btn-info" %>
            <% if current_user.admin %>
            <%= link_to 'Edit', edit_notice_path(notice), class:"btn btn-success" %>
            <%= link_to 'Destroy', notice, class:"btn btn-warning", method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </div>
        </div>
    </div>
    <% end %>
