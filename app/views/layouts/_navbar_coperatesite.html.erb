<style type="text/css">
  .navbar .navbar-nav li a {
    color: #45494B !important;
    font-size: 16px;
    line-height: 50px;
    -webkit-transition: all 0.4s ease-in-out;
    transition: all 0.4s ease-in-out;
    margin: 20px;
}
body{
  font-family: 'Libre Franklin';
}
@media (max-width: 767px){
  .svg{
    display: none;
  }
  #header{
    display: none;
  }
  #mnav{
    display: block;
  }
  .overlay {
  height: 100%;
  width: 0;
  position: fixed;
  z-index: 1;
  top: 78px;
  right: 0;
  background-color: #fff;
  overflow-x: hidden;
  transition: 0.5s;
}
.overlay-content {
  position: relative;
  top: 0%;
  width: 100%;
  text-align: center;
  margin-top: 0px;
}
.overlay a {
  padding: 8px;
  text-decoration: none;
  font-size: 18px;
  color: #818181 !important;
  text-align: left;
  display: block;
  transition: 0.3s;
}
.overlay a:hover, .overlay a:focus {
  color: #F1F1F1;
}
.overlay .closebtn {
    position: absolute;
    top: -78px;
    right: 5px;
    font-size: 40px;
}
.mobileTopImgLogo:hover{
  background: transparent;
}
}
@media screen and (max-height: 450px) {
  .overlay a {font-size: 20px}
  .overlay .closebtn {
  font-size: 40px;
  top: 15px;
  right: 35px;
  }
  </style>
<div id="mnav">
  <div id="myNav" class="overlay">
    <div class="overlay-content pl-3">
      <a href="<%= home_path %>">
        <%= image_tag("topSlider/logoo.png", :alt => "Flexslider" , :class => "img-responsive", :id => "logo", :style => "width:150px;padding:10px;")%>
      </a>
      <a href="<%=coperates_path %> "> Corporate info</a>
      <a href="<%= products_path %>">Services</a>
      <a href="<%= clientproducts_path %>">Portfolio</a>
      <a href="<%= media_path %>">Recruitment</a>
      
        <% if user_signed_in? && current_user.admin? %>
         <%= link_to "News", newzs_path%>
         <% else %>
         <%= link_to "News", get_newzs_path%>
         <% end %>
      
      <a href="https://indenbrid.com">日本語サイトへ</a>
      <a href="<%= new_contact_path %>">Contact Us</a>
    
    </div>
  </div>
    <div class="fixed-top mb-5" style="background: #fff">
      <a href="<%= home_path %>" class="mobileTopImgLogo">
                  <%= image_tag("topSlider/logoo.png", :alt => "Flexslider" , :class => "img-responsive", :id => "logo", :style => "width:150px;padding:10px;")%>
                </a>
  <span id="barMenu" style="font-size:30px;cursor:pointer;float: right;padding: 12px;" onclick="openNav()">&#9776;</span>
  <span id="closeMenu" class="overlay" style="display: none;">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
